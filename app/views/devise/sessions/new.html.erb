<div class="container m-5">
  <div class="row">
    <div class="col-6"></div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="text-center">
 <h2>ログイン</h2>
</div>
  <div class="actions text-center">
    <%= submit_tag "     Twitterでログイン    ", class:'btn btn-primary'  %><br />
  </div>
  <br>
  <h5>メールアドレスでログイン</h5>
  <div class="field">
    <font size="2"><%= f.label :'メールアドレスを入力してください'  %></font><br />
    <%= f.email_field :email,:size=>"30", autofocus: true, autocomplete: "email",:placeholder => "email@invester.com" %>
  </div>

  <div class="field">
     <font size="2"><%= f.label :'パスワードを入力してください' %></font><br />
    <%= f.password_field :password,:size=>"30", autocomplete: "current-password",:placeholder => "email@invester.com" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "          ログイン         ", class:'btn btn-primary'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

 </div>
</div>
